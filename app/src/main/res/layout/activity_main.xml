<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myAppViewModel"
            type="com.moeiny.reza.showpics.viewmodel.AppViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_fragmentUsers_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_fragmentUsers_title"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="User Info"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fragmentUser_users"
            android:layout_below="@id/txt_fragmentUsers_title"
            android:layout_width="match_parent"
            android:paddingBottom="60dp"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</layout>
