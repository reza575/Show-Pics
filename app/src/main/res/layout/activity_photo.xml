<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myAppViewModel"
            type="com.moeiny.reza.showpics.viewmodel.AppViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rel_photoFragment_parent"
        android:background="#ffffff"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_fragmentphoto_title"
            android:text="Album Id : "
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fragmentphoto_photo"
            android:layout_below="@id/txt_fragmentphoto_title"
            android:layout_width="match_parent"
            android:paddingBottom="60dp"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</layout>
