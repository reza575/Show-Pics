<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myAppViewModel"
            type="com.moeiny.reza.showpics.viewmodel.AppViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rel_showFragment_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">


        <TextView
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_showFragment_albumid"
            android:text="Album Id : "
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="22sp"
            android:textColor="@color/black"
            android:id="@+id/txt_showFragment_photoid"
            android:layout_below="@id/txt_showFragment_albumid"
            android:layout_centerHorizontal="true"
            android:text="Photo Id : "
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/img_showFragment_photo"
            android:layout_below="@id/txt_showFragment_photoid"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_showFragment_title"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:textSize="22sp"
            tools:text="1 "
            android:layout_below="@id/img_showFragment_photo"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

    </RelativeLayout>
</layout>
