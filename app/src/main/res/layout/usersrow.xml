<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="6dp"
    android:id="@+id/rel_usersRow_parent"
    android:layout_marginBottom="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#233FDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:id="@+id/txt_usersRow_id"
            android:textSize="20sp"
            tools:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_usersRow_id"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:id="@+id/txt_usersRow_name"
            android:textSize="20sp"
            tools:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_usersRow_name"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:id="@+id/txt_usersRow_email"
            android:textSize="20sp"
            tools:text="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_usersRow_email"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:id="@+id/txt_usersRow_phone"
            android:textSize="20sp"
            tools:text="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>